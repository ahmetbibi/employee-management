@model IEnumerable<Employee>

@{ 
    @*Layout = "~/Views/Shared/_Layout.cshtml";*@
    ViewBag.Title = "Employee List";
}


    <div class="card-deck">
        @foreach (var employee in Model){
        var photoPath = "~/images/" + (employee.PhotoPath ?? "important-person.jpg");

        <div class="card m-3" style="min-width: 18rem; max-width:30.5%">
            <div class="card-header">
                <h3>@employee.Name</h3>
            </div>            
            <img src="@photoPath" class="card-img-top imageThumbnail" alt="Alternate Text" asp-append-version="true" />
            <div class="card-footer text-center">
                <a asp-controller="home" asp-action="details" asp-route-id="@employee.Id" class="m-1 btn btn-primary">View</a>
                @*<a href="@Url.Action("details", "home", new { id = employee.Id })" class="m-1 btn btn-primary">View</a>*@
                @*@Html.ActionLink("View", "details", "home", new { id = employee.Id })*@
                @*<a href="/home/details/@employee.Id" class="m-1 btn btn-primary">View</a>*@
                <a asp-action="edit" asp-controller="home" asp-route-id="@employee.Id" class="m-1 btn btn-primary">Edit</a>
                <a href="#" class="m-1 btn btn-danger">Delete</a>
            </div>
        </div>
        }
    </div>

